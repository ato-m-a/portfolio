generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_PRISMA_URL")
  directUrl = env("DATABASE_URL_NON_POOLING")
}

model Skill {
  id         Int      @id @default(autoincrement())
  orderIndex Int      @map("order_index") @db.Integer
  name       String   @db.Text
  icon       String   @db.Text
  contents   String[]
  updatedAt  DateTime @map("updated_at") @updatedAt @default(now())

  @@map("skill")
}

model Tag {
  id              Int       @id @default(autoincrement())
  label           String    @unique @db.Text
  fontColor       String    @map("font_color") @db.Text
  backgroundColor String    @map("background_color") @db.Text

  projectTags     ProjectTag[]
  
  @@index([label], map: "idx_tag_label")
  @@map("tag")
}

model Company {
  id          Int      @id @default(autoincrement())
  name        String   @db.Text
  url         String?  @db.Text
  address     String   @db.Text
  description String   @db.Text
  updatedAt   DateTime @map("updated_at") @updatedAt @default(now())

  career    Career[]
  
  @@map("company")
}

model Career {
  id          Int       @id @default(autoincrement())
  position    String    @db.Text
  startDate   DateTime  @map("start_date") @db.Date
  endDate     DateTime? @map("end_date") @db.Date
  detail      Json      @db.Json
  updatedAt   DateTime  @map("updated_at") @updatedAt @default(now())

  company     Company   @relation(fields: [companyId], references: [id], map: "FK_career_company_id")
  companyId   Int       @map("company_id")

  project     Project[]

  @@map("career")
}

model Project {
  id           Int        @id @default(autoincrement())
  priority     Int        @db.Integer
  name         String     @db.Text
  startDate    DateTime   @map("start_date") @db.Date
  endDate      DateTime?  @map("end_date") @db.Date
  role         String     @db.Text
  participants Int        @db.Integer
  detail       Json       @db.Json
  updatedAt    DateTime   @map("updated_at") @updatedAt @default(now())

  projectTags  ProjectTag[]

  career       Career     @relation(fields: [careerId], references: [id], map: "FK_project_career_id")
  careerId     Int        @map("career_id")

  portfolio    Portfolio? @relation(fields: [portfolioId], references: [id], map: "FK_portfolio_id")
  portfolioId  Int?       @map("portfolio_id")

  @@map("project")
}

model Portfolio {
  id         Int       @id @default(autoincrement())
  pathname   String    @db.Text
  pageId     String    @map("page_id") @db.Text
  coverImage String    @map("cover_image") @db.Text
  title      String    @db.Text
  updatedAt  DateTime  @map("updated_at") @updatedAt @default(now())

  project    Project[]

  @@index([pathname], map: "idx_portfolio_pathname")
  @@map("portfolio")
}

model ProjectTag {
  id        Int     @id @default(autoincrement())

  project   Project @relation(fields: [projectId], references: [id], map: "FK_project_id")
  projectId Int     @map("project_id")

  tag       Tag     @relation(fields: [tagId], references: [id], map: "FK_tag_id")
  tagId     Int     @map("tag_id")

  @@map("project_tag")
}